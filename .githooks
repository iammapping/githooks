module.exports = function(githooks) {
	githooks.hook('pre-commit', {
		'bin': 'bin/git-hooks'
	}).on('all', function(payload) {
		// console.log(payload);
	}).on('match', function(m) {
		// console.log(m);
	}).on('match:bin', function(f) {
		setTimeout(function() {
			githooks.error(new Error(f[0] + ' can not be commit'));
		}, 3000);
		githooks.pass('can not wait any more');
	});

};